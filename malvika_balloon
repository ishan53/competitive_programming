#include <iostream>
using namespace std;

int main() {
  int t;
  cin>>t;
  while(t--){
    string str;
    cin>>str;
    int c1=0,c2=0;
    for(int i=0;i<str.length();i++){
      if(str[i]=='a'){
        c1++;
      }
      else{
        c2++;
      }
    }
    if(c1==c2){
      cout<<c1<<endl;
    }
    else if(c1>c2){
      cout<<c2<<endl;
    }
    else{
      cout<<c1<<endl;
    }
  }
  return 0;
}
